html
    head
        link(
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        )
        script(
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        )
        title Easy Cats! &raquo; Facts
        style.
            .no-scroll {
                overflow-x: hidden;
            }
            .no-decoration {
                list-style-type: none;
                text-decoration: none;
            }

    body(class="no-scroll")
        header(class="col-md-12 p-5 d-flex justify-content-around")
            div(class="col-md-8")
                p(class="h1 font-monospace") Easy Cats!
            
            div(class="col-md-3")
                ul(class="no-decoration h-100 d-flex justify-content-between")
                    li(class="col-md-5 d-flex flex-column justify-content-around")
                        a(
                            href="/", 
                            class="btn btn-outline-dark p-2"
                        ) Go to Home page

                    li(class="col-md-5 d-flex flex-column justify-content-around")
                        a(
                            href="/about", 
                            class="btn btn-outline-dark p-2"
                        ) Go to About page

        main(class="col-12 p-5 d-flex justify-content-around")
            div(class="col-md-8 col-sm-12")
                h1(class="bg-dark text-light rounded px-4 py-3 mb-3") Facts about cats.
                h3(class="border-start border-5 border-dark px-3 py-4 mb-4")= fact
                p(
                    class="h4"
                    style="font-weight: 100;"
                )= facts

            div(class="col-md-3 col-sm-12 text-center")
                img(
                    src=image
                    width='100%'
                    height='auto'
                    class="rounded"
                )

        footer(class="fixed-bottom px-5")
            p(class="font-monospace") <i>Easy Cats!</i> 2022-2023 &copy; Arturo B. Mart√≠n